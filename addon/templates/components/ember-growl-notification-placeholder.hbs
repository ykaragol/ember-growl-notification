<div id="growl-container" class="ember-growl-container"></div>

{{#each notifications as |notification|}}
  {{#ember-growl-notification}}
    {{#if hasBlock}}
      {{yield notification (action 'dismissNotification' notification)}}
    {{else}}
      {{#ember-growl-notification-item close=(action 'dismissNotification' notification)}}
        {{notification.message}}
      {{/ember-growl-notification-item}}
    {{/if}}
  {{/ember-growl-notification}}
{{/each}}